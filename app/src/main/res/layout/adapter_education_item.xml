<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/adapter_education_item_institution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:minHeight="100dp"
                    android:gravity="center"
                    tools:text="University of Phonix" android:textColor="#2196F3"/>
            <TextView
                    android:id="@+id/adapter_education_item_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center"
                    tools:text="Area" android:minHeight="40dp" android:padding="8dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/adapter_education_item_start"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:minHeight="50dp"
                        android:gravity="center"
                        tools:text="Start" android:textColor="#009688" android:padding="8dp"/>
                <TextView
                        android:id="@+id/adapter_education_item_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:minHeight="50dp"
                        android:gravity="center"
                        tools:text="End" android:textColor="#FF5722" android:padding="8dp"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/adapter_education_item_study_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:minHeight="100dp"
                    android:gravity="center"
                    tools:text="Study Type" android:padding="8dp"/>
        </LinearLayout>

</androidx.cardview.widget.CardView>
