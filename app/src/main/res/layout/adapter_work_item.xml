<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/adapter_work_item_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:minHeight="80dp"
                    android:gravity="center"
                    tools:text="Company Name" />
            <TextView
                    android:id="@+id/adapter_work_item_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="Position" android:minHeight="40dp" android:padding="8dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/adapter_work_item_start"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:gravity="center"
                        tools:text="Start"  android:padding="8dp"/>
                <TextView
                        android:id="@+id/adapter_work_item_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="50dp"
                        android:gravity="center"
                        tools:text="End"  android:padding="8dp"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/adapter_work_item_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="center"
                    tools:text="Summary" android:padding="8dp"/>
        </LinearLayout>

</androidx.cardview.widget.CardView>
